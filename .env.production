# Intuitus - Variables de Entorno (Producción)
# Subir este archivo como .env.local al servidor

# Configuración de la aplicación
NEXT_PUBLIC_APP_NAME=Intuitus
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=https://intuitus.verumax.com

# Límites de la aplicación (Freemium)
NEXT_PUBLIC_MAX_PROJECTS=5
NEXT_PUBLIC_MAX_VIDEO_DURATION=1800
NEXT_PUBLIC_MAX_VIDEO_SIZE_MB=500

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_FLUXUM_INTEGRATION=false

# Integración Futura con Verumax (Fase 2)
# NEXT_PUBLIC_VERUMAX_API_URL=https://verumax.com/api
# NEXT_PUBLIC_FLUXUM_API_URL=https://verumax.com/api/fluxum
